<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600" width="800" height="600">
  <defs>
    <linearGradient id="bg3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#E8DAEF;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#D7BDE2;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Fondo -->
  <rect width="800" height="600" fill="url(#bg3)"/>
  
  <!-- Bloque para techo (mÃ¡s delgado y hueco) -->
  <g transform="translate(200, 180)">
    <!-- Cara frontal -->
    <rect x="0" y="80" width="400" height="140" fill="#A9A9A9" stroke="#808080" stroke-width="3"/>
    
    <!-- Cara superior (perspectiva) -->
    <polygon points="0,80 70,50 470,50 400,80" fill="#C0C0C0" stroke="#808080" stroke-width="3"/>
    
    <!-- Cara lateral derecha (perspectiva) -->
    <polygon points="400,80 470,50 470,190 400,220" fill="#909090" stroke="#808080" stroke-width="3"/>
    
    <!-- Huecos grandes (para techo aligerado) -->
    <rect x="30" y="100" width="80" height="100" fill="#696969" opacity="0.6"/>
    <rect x="120" y="100" width="80" height="100" fill="#696969" opacity="0.6"/>
    <rect x="210" y="100" width="80" height="100" fill="#696969" opacity="0.6"/>
    <rect x="300" y="100" width="80" height="100" fill="#696969" opacity="0.6"/>
    
    <!-- Divisiones internas -->
    <line x1="110" y1="80" x2="110" y2="220" stroke="#808080" stroke-width="2" opacity="0.4"/>
    <line x1="200" y1="80" x2="200" y2="220" stroke="#808080" stroke-width="2" opacity="0.4"/>
    <line x1="290" y1="80" x2="290" y2="220" stroke="#808080" stroke-width="2" opacity="0.4"/>
    
    <!-- Textura ligera -->
    <circle cx="60" cy="130" r="2" fill="#808080" opacity="0.3"/>
    <circle cx="350" cy="160" r="2" fill="#808080" opacity="0.3"/>
  </g>
  
  <!-- Badge "NUEVO" -->
  <rect x="640" y="100" width="120" height="40" rx="20" fill="#E67E22"/>
  <text x="700" y="127" font-family="Poppins, Arial, sans-serif" font-size="20" font-weight="bold" 
        fill="#FFFFFF" text-anchor="middle">NUEVO</text>
  
  <!-- Texto -->
  <text x="400" y="480" font-family="Poppins, Arial, sans-serif" font-size="32" font-weight="bold" 
        fill="#2C3E50" text-anchor="middle">Bloque para Techo</text>
  <text x="400" y="520" font-family="Poppins, Arial, sans-serif" font-size="20" 
        fill="#7F8C8D" text-anchor="middle">Foto de referencia - Reemplazar con foto real</text>
</svg>
