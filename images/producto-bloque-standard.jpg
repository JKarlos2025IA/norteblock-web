<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600" width="800" height="600">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ECF0F1;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#BDC3C7;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Fondo -->
  <rect width="800" height="600" fill="url(#bg)"/>
  
  <!-- Bloque de concreto 3D -->
  <g transform="translate(250, 150)">
    <!-- Cara frontal -->
    <rect x="0" y="100" width="300" height="200" fill="#95A5A6" stroke="#7F8C8D" stroke-width="3"/>
    
    <!-- Cara superior (perspectiva) -->
    <polygon points="0,100 50,70 350,70 300,100" fill="#BDC3C7" stroke="#7F8C8D" stroke-width="3"/>
    
    <!-- Cara lateral derecha (perspectiva) -->
    <polygon points="300,100 350,70 350,270 300,300" fill="#7F8C8D" stroke="#7F8C8D" stroke-width="3"/>
    
    <!-- Huecos del bloque -->
    <rect x="40" y="140" width="80" height="120" fill="#5D6D7E" opacity="0.7"/>
    <rect x="180" y="140" width="80" height="120" fill="#5D6D7E" opacity="0.7"/>
    
    <!-- Textura -->
    <circle cx="70" cy="180" r="2" fill="#7F8C8D" opacity="0.3"/>
    <circle cx="120" cy="210" r="2" fill="#7F8C8D" opacity="0.3"/>
    <circle cx="220" cy="190" r="2" fill="#7F8C8D" opacity="0.3"/>
    <circle cx="270" cy="240" r="2" fill="#7F8C8D" opacity="0.3"/>
  </g>
  
  <!-- Texto -->
  <text x="400" y="480" font-family="Poppins, Arial, sans-serif" font-size="32" font-weight="bold" 
        fill="#2C3E50" text-anchor="middle">Bloque Standard</text>
  <text x="400" y="520" font-family="Poppins, Arial, sans-serif" font-size="20" 
        fill="#7F8C8D" text-anchor="middle">Foto de referencia - Reemplazar con foto real</text>
</svg>
